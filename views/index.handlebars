    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li id="homeNav" class="nav-item">
        <a class="nav-link active" href="index">Home
        </a>
      </li>
      <li id="saveNav" class="nav-item">
        <a class="nav-link" href="saved">Saved Articles</a>
      </li>
      <button class="btn btn-success my-2 my-sm-0 float-right" data-toggle="modal" data-target="#scrapeModal" id="scrape" type="submit">Scrape New Articles</button>

<div class="container-fluid">
  <div id="articles">

    {{#each articles}} {{#if this.saved}}
    <div class="row savedArticles">
      <div class="col-sm-2">
        <img class="card-img-top" src="{{this.image}}" alt="Card image" height="116" />
      </div>
      <div class="col-sm-8">
        <a href="https://www.huffingtonpost.com/{{this.link}}" target="_blank" class="card-link">
          <h4 class="card-title">{{this.title}}</h4>
        </a>
      </div>
      <div class="col-sm-2">
        <button class="btn btn-block btn-warning my-2 my-sm-0 remove" id={{this._id}} type="submit">Remove</button>
      </div>
      <div class="col-sm-2">
        <button class="btn btn-block btn-warning my-2 my-sm-0 addNote" add-id={{this._id}} type="submit" data-toggle="modal" data-target="#noteModal">Add Note</button>
      </div>

      <div class="modal" id="noteModal">
        <div class="modal-dialog">
          <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
              <h4 class="modal-title">Article Notes</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
              <div id="noteContainer"></div>
              <textarea placeholder="New Note" rows="4" cols="60" id="newNote"></textarea>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-success saveNote">Save</button>
            </div>

          </div>
        </div>
      </div>


    </div>
    {{/if}} {{/each}}
  </div>
</div>
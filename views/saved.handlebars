
<div class="container-fluid">
  <div id="articles">

    {{#each articles}}
    {{#if this.saved}}
    <div class="row savedArticles">
      <div class="col-sm-2"><img class="card-img-top" src="{{this.image}}" alt="Card image" height="116"/></div>
      <div class="col-sm-8"><a href="https://www.huffingtonpost.com/{{this.link}}" target="_blank" class="card-link"> <h4 class="card-title">{{this.title}}</h4></a></div>
      <div class="col-sm-2"> <button class="btn btn-block btn-warning my-2 my-sm-0 remove" id={{this._id}} type="submit">Remove</button></div>
      <div class="col-sm-2"> <button class="btn btn-block btn-warning my-2 my-sm-0 save" id={{this._id}} type="submit">Add Note</button></div>

       
      </div>
   
      {{/if}}
    {{/each}}

    </div>
    <div id="notes">
    </div>
  </div>